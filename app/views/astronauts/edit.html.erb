<form action="/astronauts/:id" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <ul>
    <li>
      <label>Astronaut Name:</label>
      <input type="text" name="astronaut[name]" id="astronaut_name" value="<%=@astro.name%>">
      <li><label>Weight:</label>
      <input type="text" name="astronaut[weight]" id="astronaut_weight" value="<%=@astronauts.weight%>">
      <li><label>Height:</label>
      <input type="text" name="astronaut[height]" id="astronaut_height" value="<%=astronaut.height%>">
      <li><label>Bio:</label>
      <input type="text" name="astronaut[bio]" id="astronaut_bio" value="<%=astronaut.bio%>">
      <li><label>Nationality:</label>
      <input type="text" name="astronaut[nationality]" id="astronaut_nationality" value="<%=astronaut.nationality%>">
      <li><label>Specialty:</label>
      <input type="text" name="astronaut[specialty]" id="astronaut_specialty" value="<%=astronaut.specialty%>">
    </li>
  </ul>
  <input type="submit" value="Update Crew Member" />
</form>

<form method="post" action="/astronauts/<%= @astronaut.id %>">
  <input type="hidden" name="_method" value="Delete" />
  <input type="submit" value="Delete Crew Member" />
</form>