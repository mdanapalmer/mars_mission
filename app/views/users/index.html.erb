
<% if logged_in? %>
<h2>User Information:</h2>

<ul>
<li>Name: <%= @user.name %></li>
<li>Email: <%= @user.email %></li>
<li>Rank: <%= @user.rank %></li>
<li>Age: <%= @user.age %></li>
</ul>
<% end %>

<h3>Flight Controller of the following ships:</h3>

<ul><% @spaceships.each do |spacecraft| %>
<li>Name: <%= spacecraft.name %></li>
<li>Type: <%= spacecraft.ship_type %></li>
<li>Speed: <%= spacecraft.speed %></li>
<li>Crew: <%= spacecraft.crew %></li>
<li>Cargo: <%= spacecraft.cargo %></li>
</ul>
<% end %>
<h3>Current Astronaut Roster:</h3>

<ul><% @astronauts.each do |astro| %>
<li><%= astro.name %></li>
<li><%= astro.weight %></li>
<li><%= astro.height %></li>
<li><%= astro.bio %></li>
<li><%= astro.specialty %></li>
<li><%= astro.nationality %></li>
</ul>
<br>

<% end %>
<% if !logged_in? %>
<p>You need to be logged in to view this information.</p>

<% end %>
  <a href='/'>Return to Mission Control.</a>
  